# Environment Configuration for Orchid Continuum v2.0

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/orchid_continuum

# JWT Authentication
JWT_SECRET_KEY=your-super-secure-secret-key-change-in-production
SESSION_SECRET=your-session-secret-key

# API Configuration
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# CORS Origins (comma-separated)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001,https://*.neonone.com,https://fcos.org,https://*.fcos.org"

# External API Keys
OPENAI_API_KEY=sk-your-openai-api-key
GBIF_API_USER=your-gbif-username
GBIF_API_PASSWORD=your-gbif-password

# Google Drive Integration
GOOGLE_DRIVE_API_KEY=your-google-drive-api-key
GOOGLE_SERVICE_ACCOUNT_JSON=path/to/service-account.json
FCOS_DRIVE_FOLDER_ID=your-drive-folder-id

# Storage Configuration
OBJECT_STORAGE_PROVIDER=local  # local, supabase, r2, s3
OBJECT_STORAGE_BUCKET=orchid-continuum-media
OBJECT_STORAGE_URL=https://your-storage-domain.com

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true
SQL_DEBUG=false

# Widget Configuration
WIDGET_BASE_URL=https://widgets.orchid-continuum.org
EMBED_ALLOWED_DOMAINS="*.neonone.com,fcos.org,*.fcos.org"

# Analytics (optional)
GOOGLE_ANALYTICS_ID=GA-XXXXX-X
POSTHOG_API_KEY=your-posthog-key

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600

# File Upload Limits
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES="jpg,jpeg,png,webp,tiff"

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30